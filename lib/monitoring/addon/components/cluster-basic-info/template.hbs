<div class="row-same-height row-full-height mt-50">
  <div class="span-height span-full-height col-top" style="margin-bottom: 20px;">
    <div class="no-padding-margin" style="height: 100%;">
      <div class="text-left">
        <label class="text-muted">{{t 'clustersPage.provider.label'}}:</label>
        <span>{{cluster.displayProvider}}</span>
      </div>

      <hr class="mt-15 mb-15"/>

      <div class="text-left">  
        <label class="text-muted">{{t 'generic.cpu'}}:</label>
        {{cluster.cpuTotal}}
      </div>
      <hr class="mt-15 mb-15"/>

      <div class="text-left">
        <label class="text-muted">{{t 'generic.memory'}}:</label>
        {{cluster.memoryTotal}}
      </div>
      <hr class="mt-15 mb-15"/>

      <div class="text-left">
        <label class="text-muted">{{t 'clustersPage.version.label'}}:</label>
        <span>{{cluster.version.gitVersion}}</span>
      </div>

      <hr class="mt-15 mb-15"/>

      <div class="text-left">
        <label class="text-muted">{{t 'clustersPage.nodes.label'}}:</label>
        <span>
          {{#if (eq cluster.state "inactive")}}
            {{t 'clusterRow.noHosts'}}
          {{else}}
            {{cluster.machines.length}}
          {{/if}}
        </span>
      </div>

      <hr class="mt-15 mb-15"/>

      <div class="text-left">
        <label class="text-muted">{{t 'generic.created'}}:</label>
        <span>
          {{date-calendar model.cluster.created}}
        </span>
      </div>

      <hr class="mt-15 mb-15"/>
    </div>
  </div>
</div>